pipeline{
    agent any
    stages{
        stage('Transtats checkout'){
            steps{
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/krisnababu/temp-ts-ansible.git'
            }
        }
        

	stage('Create virtualenv, run behave features and generate allure reports'){
	    steps{
                dir("ui-test"){
		   sh '''
		      #!/bin/bash
		      mkvirtualenv -r requirements.txt transtats-test
		      behave features
		      behave -f allure_behave.formatter:AllureFormatter -o reports/ features/
		      allure serve reports/
		   '''  
                }
            }
        }
    }
}
