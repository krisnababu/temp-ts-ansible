pipeline{
    agent any
    stages{
        stage('Transtats checkout'){
            steps{
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/krisnababu/temp-ts-ansible.git'
            }
        }
        

	stage('Create virtualenv, run behave features and generate allure reports'){
	    steps{
                dir("ui-test"){
		   sh "mkvirtualenv -r requirements.txt transtats-test"		
		   sh "behave features"
		   sh "behave -f allure_behave.formatter:AllureFormatter -o reports/ features/"
		   sh "allure serve reports/"
                }
            }
        }
    }
}
