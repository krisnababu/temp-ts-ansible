pipeline{
    agent any
    stages{
        stage('Transtats checkout'){
            steps{
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/krisnababu/temp-ts-ansible.git'
            }
        }
        

	stage('Create virtualenv, run behave features and generate allure reports'){
	    steps{
                dir("ui-test"){
		   sh '''
		      #!/bin/bash
		      source venv/bin/activate
		      pip3 install -r requirements.txt
		      ~/.local/bin/behave features
		      ~/.local/bin/behave -f allure_behave.formatter:AllureFormatter -o reports/ features/
		      ~/allure/bin/allure serve reports/
		   '''  
                }
            }
        }
    }
}
