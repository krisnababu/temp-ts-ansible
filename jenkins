pipeline{
    agent any
    stages{
        stage('Transtats checkout'){
            steps{
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/krisnababu/temp-ts-ansible.git'
            }
        }
        

	
	stage('Generate allure html report'){
	    steps{
                dir("ui-test"){
		   sh '''
		      #!/bin/sh
		      source venv/bin/activate
		      pip3 install -r requirements.txt
		      set +e
		      /usr/bin/rm -f reports/*
		      ~/.local/bin/behave -f allure_behave.formatter:AllureFormatter -o reports/ features/
		      ~/allure/bin/allure serve reports/ > id 2>&1 &
		      PID=$!
		      /usr/bin/kill -9 $PID
		      /usr/bin/cp -rf /tmp/`/usr/bin/grep 'tmp' id | /usr/bin/cut -d '/' -f 3`/allure-report/* /var/www/html/testreport/
		      set -e
		   '''  
                }
            }
        }
    }
}
